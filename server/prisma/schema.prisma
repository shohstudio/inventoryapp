// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  email     String?  @unique
  password  String
  role      String   @default("employee") // admin, employee, warehouseman, accounter, guard
  department String?
  position  String?  // Lavozimi (e.g. Director, Accountant)
  status    String   @default("active") // active, inactive
  pinfl     String?  @unique // JSHSHIR (14 digits)

  items     Item[]   @relation("AssignedItems")
  logs      Log[]
  
  sentRequests     Request[] @relation("Requester")
  receivedRequests Request[] @relation("TargetUser")
  
  registeredItems  ExternalItem[] // Items registered by guard

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id           Int      @id @default(autoincrement())
  name         String
  model        String?
  serialNumber String?  @unique
  inn          String?  // Inventory Number / INN
  orderNumber  String?  // Custom Inventory Number
  category     String?
  subCategory  String?
  
  price        Decimal  @default(0)
  quantity     Int      @default(1)
  purchaseDate String?  // Storing as String to match "YYYY-MM-DD" easily, or could be DateTime
  
  status       String   @default("working") // working, repair, written-off, lost, empty
  condition    String?  // new, old
  
  building     String?
  location     String?
  department   String?
  
  image        String?  // URL to image

  // If imported from Excel and user not found, store name here
  initialOwner String?
  initialRole  String?  // Store role if user not found
  initialPinfl String?
  
  // Relations
  assignedTo   User?    @relation("AssignedItems", fields: [assignedUserId], references: [id])
  assignedUserId Int?
  
  assignedDate DateTime? // When it was assigned

  logs         Log[]
  requests     Request[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([category])
  @@index([assignedUserId])
  @@index([createdAt])
}

model Log {
  id        Int      @id @default(autoincrement())
  action    String   // create, update, delete, assign, return, repair, write-off
  details   String?  // JSON or text description
  
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  
  item      Item?    @relation(fields: [itemId], references: [id])
  itemId    Int?

  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([itemId])
}

model Request {
  id        Int      @id @default(autoincrement())
  type      String   // assignment, exit, return
  status    String   @default("pending") // pending_accountant, pending_employee, approved, rejected, completed
  
  description String?
  title       String?  // For issue reports
  category    String?  // For issue reports
  priority    String?  // For issue reports
  image       String?  // URL to image

  // Relations
  item      Item?    @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    Int?

  // Who initiated
  requester   User?   @relation("Requester", fields: [requesterId], references: [id])
  requesterId Int?

  // Who is it for (e.g. employee)
  targetUser   User?   @relation("TargetUser", fields: [targetUserId], references: [id])
  targetUserId Int?

  // Approvals
  accountantSignature String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([targetUserId])
  @@index([requesterId])
}

model ExternalItem {
  id          Int      @id @default(autoincrement())
  itemName    String
  description String?
  ownerName   String   // Person bringing it in
  enteredAt   DateTime @default(now())
  exitedAt    DateTime?
  status      String   @default("inside") // inside, exited
  notes       String?
  
  guardId     Int?
  guard       User?    @relation(fields: [guardId], references: [id])
  shortId     String?  @unique // 5-digit auto ID
}
